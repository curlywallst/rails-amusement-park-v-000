<div class="center">
  <div class="pic">
    <img src="http://www.allthingsclipart.com/05/amusement.park.05.jpg" height="250">
  </div>

  <div class="info">
    <p><strong>Name:</strong><%= @attraction.name %></p>
    <p><strong>Ticket Requirement:</strong> <%= @attraction.tickets %> </p>
    <p><strong>Height Requirement:</strong> <%= @attraction.min_height %></p>
    <p><strong>Nausea Rating:</strong> <%= @attraction.nausea_rating %> </p>
    <p><strong>Happiness Rating:</strong> <%= @attraction.happiness_rating %> </p>
    <% if !current_user.admin? %>
      <%= button_to "Go on this ride", new_ride_path, method: :get, params: {:attraction_id => @attraction.id}%>
    <% end %>
    <%= link_to_if(current_user.admin?, "Edit Attraction", { controller: "attractions", action: "edit", id: @attraction }){} %><br />
    <a href="/attractions">Back</a><p></p>
  </div>
</div>
